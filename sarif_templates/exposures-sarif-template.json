{
    "$schema": "https://json.schemastore.org/sarif-2.1.0.json",
    "version": "2.1.0",
    "runs": [
        {
            "tool": {
                "driver": {
                    "name": "Jfrog -{report_type}-{category}",
                    "semanticVersion": "v8.0.0",
                    "informationUri": "https://github.com/gitleaks/gitleaks",
                    "rules": [
                        {
                            "id": "{{exposures_id}}",
                            "name": "{{exposures_id}}",
                            "helpUri": "https://checkmarx.com/resource/documents/en/34965-67042-checkmarx-one.html",
                            "help": {
                                "text": "{{description}}",
                                "markdown": "{{description}}"
                            },
                            "fullDescription": {
                                "text": "{{description}}"
                            },
                            "x-metadata": {
                                "cwe": "{{cwe}}"
                            },
                            "properties": {
                                "security-severity": "{{jfrog_severity}}",
                                "name": "{{exposures_id}}",
                                "id": "{{exposures_id}}",
                                "description": "{{description}}",
                                "tags": [ "{{category}}" ]
                            }
                        }
                    ]
                }
            },
            "results": [
                {
                    "message": {
                        "text": "{{description}}"
                    },
                    "ruleId": "{{exposures_id}}",
                    "locations": [
                        {
                            "physicalLocation": {
                                "artifactLocation": {
                                    "uri": "{{file_path}}"
                                },
                                "region": {
                                    "startLine": "{{location}}",
                                    "startColumn": "{{location_column}}",
                                    "endLine": "{{location_end_line}}",
                                    "endColumn": "{{location_end_column}}",
                                    "snippet": {
                                        "text": "{{evidence}}"
                                    }
                                }
                            }
                        }
                    ],
                    "partialFingerprints": {
                        "commitSha": "",
                        "email": "",
                        "author": "",
                        "date": "",
                        "commitMessage": ""
                    },
                    "properties": {
                        "tags": [ "{{category}}" ]
                    }
                }
            ]
        }
    ],
    "invocations": [
        {
            "executionSuccessful": true,
            "notificationConfigurationOverrides": [],
            "ruleConfigurationOverrides": [],
            "toolConfigurationNotifications": [],
            "toolExecutionNotifications": [],
            "workingDirectory": {
                "index": -1,
                "uri": "{{repository}}+{{impacted_artifact}}"
            }
        }
    ]
}